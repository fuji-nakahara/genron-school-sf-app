= link_to student, class: 'list-group-item list-group-item-action' do
  .d-flex.align-items-center
    %span.lead.flex-grow-1= student.name
    - if student.works.size > 0
      %span.badge.badge-primary.badge-pill= student.works.size
    - if student.synopses.size > 0
      %span.badge.badge-secondary.badge-pill.ml-1= student.synopses.size
  %ul.list-inline.with-comma.text-muted.mb-0
    %li.list-inline-item= student.original_id
    - if student.twitter_screen_name.present?
      %li.list-inline-item @#{student.twitter_screen_name}
