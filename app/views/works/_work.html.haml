= link_to work.original_url, target: :_blank, class: "list-group-item list-group-item-action #{local_assigns.fetch(:class, '')}" do
  .d-flex.justify-content-between.align-items-start
    %h5= work.title.presence || '（タイトルなし）'
    - if work.score > 0
      %span.badge.badge-success.badge-pill= work.score
  = yield
