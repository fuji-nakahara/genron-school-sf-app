- content_for :title, "#{@subject.title} #{@subject.term_id} #{@subject.display_number}"

%header.mb-3
  .lead #{@subject.term_id} #{@subject.display_number}
  %h1= @subject.title

%p= link_to '超・SF作家育成サイトの課題ページへ', original_subject_url(@subject)

- unless @subject.works.empty?
  %section.mb-3
    %header.mb-3
      %h2 実作
    .list-group
      - @subject.works.each do |work|
        - cache work do
          = render work do
            %span.text-muted.link{ data: { href: student_path(work.student) } }= work.student.name

- unless @subject.no_synopsis
  %section.mb-3
    %header.mb-3
      %h2 梗概
    .list-group
      - @subject.synopses.each do |synopsis|
        - cache synopsis do
          = render synopsis do
            %span.text-muted.link{ data: { href: student_path(synopsis.student) } }= synopsis.student.name
